<%- include('partials/header') %>
<div class="container mb-5">
  <h1><%=title%></h1>
  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <form method='POST' action=''>
            <div class="form-group">
              <label for="username">Username:</label>
              <input class="form-control input-title" id="username" type='text' name='username' required value= "<%=undefined===user ? '' : user.username%>">
              
              <label for="email">Email:</label>
              <input class="form-control input-title" id="email" type='email' name='email' required  value= "<%=undefined===user ? '' : user.email%>">
            </div>

            <div class="form-group">
              <label for="password">Password</label>
              <input class="form-control input-title" id="password" type='password' name='password' required>
              
              <label for="password_confirm">Confirm Password:</label>
              <input class="form-control input-title" id="password_confirm" type='password' name='password_confirm' required>
              
              
              <button class="btn btn-add" type="submit">Submit</button>
              <a class="btn btn-secondary ms-3" href="/">Cancel</a>
            </div>

          </form>

        </div>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="card social-block">
        <div class="card-body">
          <a class="btn btn-block" href="" role="button">
            <i class="fab fa-google"></i>
            Sign Up with Google
          </a>
        </div>
      </div>
      <div class="error-text mt-5">
        <% if (typeof errors !== 'undefined'){errors.forEach(function(error){%>
          <p>ERROR: <%= error.msg %></p>
        <% })} %>
      </div>
    </div>
  </div>
</div>
  <!-- <button class="btn btn-secondary" type="submit">Submit</button> -->

<%- include('partials/footer') %>
<%- include("partials/scripts"); -%>
