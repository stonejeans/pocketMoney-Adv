		  <tr>
			<th scope="row">2</th>
			<td>5 min - 15 mins</td>
		  </tr>
		  <tr>
			<th scope="row">3</th>
			<td>15 min - 25 mins</td>
		  </tr>
		  <tr>
			<th scope="row">4</th>
			<td>25 min - 40 mins</td>
		  </tr>
		  <tr>
			<th scope="row">5</th>
			<td>0 min - 1 hr</td>
		  </tr>
		</tbody>
	  </table>
	</div>
	

	<p><%=guideContent2%></p>
	<a class="btn btn-add" href="./post/compose">Add Tasks</a>
